	<div class="container-fluid " style="height: 100%;">
		<div class="table-wrapper">
			<div class="table-title">
				<div class="row">

				</div>
			</div>

			<table class="table">
				<thead>
					<tr>
						<th>No</th>
						<th>Image</th>
						<th>Name</th>
						<th>Quantity</th>
						<th> Amount</th>
						<th>Status</th>
						<th>Action</th>
					</tr>
				</thead>
				<tbody>
					{{#each products}}
					<tr>
						<td>{{inc @index}}</td>
						<td>
							<div class="how-itemcart1">
								<img src="/product-images/{{this.product._id}}.jpg" alt="IMG">
							</div>
						</td>

						<td>{{this.product.name}}</td>
						<td>{{this.quantity}}</td>
						<td>{{this.product.price}}</td>
						<td>{{this.status}}</td>
						<td>
							{{#ifEquals this.status 'Placed'}}
							<button class="button-24"
								onclick="setOrderedProductStatus('cancel','{{this._id}}','{{this.item}}')">CANCEL</button>
							{{/ifEquals }}
							{{#ifEquals this.status 'cancel'}}
							<p>Cancelled</p>
							{{/ifEquals }}
							{{#ifEquals this.status 'Delivered'}}
							<button class="button-24"
								onclick="returnOrder('Returned','{{this._id}}','{{this.item}}','{{this.product.price}}','{{this.quantity}}')">Return
								Order</button>
							{{/ifEquals}}
							{{#ifEquals this.status 'Shipped'}}
							<p>Product Shipped</p>
							{{/ifEquals }}
						</td>
					</tr>
					{{/each}}
				</tbody>
			</table>

		</div>
