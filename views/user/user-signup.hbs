 <style>
    .bn3 {
  display: inline-block;
  padding: 0.5em 1.7em;
  margin: 0 0.1em 0.1em 0;
  border: 0.16em solid rgb(255, 255, 255);
  border-radius: 2em;
  box-sizing: border-box;
  text-decoration: none;
  font-family: "Roboto", sans-serif;
  font-weight: 300;
  color: #000000;
  text-shadow: 0 0.04em 0.04em rgba(255, 255, 255, 0.253);
  text-align: center;
  transition: all 0.2s;
}

.bn3:hover {
  color: rgb(255, 255, 255);
  background-color: rgb(0, 0, 0);
}
 </style>
 <body>

    <div class="main">
 <!-- Sign up form -->
        <section class="signup">
            <div class="container">
                <div class="signup-content">
                    <div class="signup-form">
                        <h2 class="form-title">Sign up</h2>
                        <form action="/userSignup" method="POST" class="register-form" id="register-form">
                                  {{#if UserSignUpError}}
                                <p class="error" id="UserSignUpError" style="color:red ;" >{{UserSignUpError}}</p>
                                {{/if}}
                           
                            <div class="form-group">
                                <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                <input type="text" name="name" id="contact-name" placeholder="Your Name" onkeyup="validateName()"/>
                                 <span id="name-error" style="color: red;"></span>
                            </div>
                            <div class="form-group">
                                <label for="email"><i class="zmdi zmdi-email"></i></label>
                                <input type="email" name="email" id="contact-email"  placeholder="Your Email"  onkeyup="validateEmail()"/>
                                <span id="email-error" style="color: red;"></span>
                                     
                            </div>
                            <div class="form-group">
                                <label for="phone"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                <input type="tel" name="phoneNumber" id="contact-number" placeholder="Phone Number" onkeyup="validatePhoneNumber()"/>
                                  <span id="number-error" style="color: red;"></span>
                            </div>
                            <div class="form-group">
                                <label for="pass"><i class="zmdi zmdi-lock"></i></label>
                                <input type="password" name="password" id="contact-password" placeholder="Password" onkeyup="validatePassword()"/>
                                  <span id="password-error" style="color: red;"></span>
                            </div>
                              
                            <div class="form-group">
                                <button type="submit" id="contact-submit"  class="btn btn-primary bn3"  onclick="return validateForm()" >Submit</button>
                                <div id="submit-error" style="color: red;"></div>
                            </div>
                        </form>
                    </div>
                    <div class="signup-image">
                        <figure><img src="../Admin/adminlogin/images/signup-image.jpg" alt="sing up image"></figure>
                        <a href="/userLogin" ><button class="bn3">I am already member</button> </a>
                    </div>
                </div>
            </div>
        </section>
            </div>

   <script
  type="text/javascript">window.setTimeout("document.getElementById('UserSignUpError').style.display='none';", 3000);Â </script>
